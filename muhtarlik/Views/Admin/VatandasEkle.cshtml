@{
    ViewData["Title"] = "Vatandaş Ekle";
    Layout = "_AdminLayout";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">


<form asp-action="VatandasEkle" method="post">
    <h4>Kimlik Bilgileri</h4>
    <input name="TcKimlikNo" class="form-control" placeholder="TC Kimlik No" required />
    <input name="Sifre" type="password" class="form-control" placeholder="Şifre" required />
    <input name="Ad" class="form-control" placeholder="Ad" required />
    <input name="Soyad" class="form-control" placeholder="Soyad" required />
    <select name="Cinsiyet" class="form-select" required>
        <option value="">Cinsiyet Seçin</option>
        <option value="Erkek">Erkek</option>
        <option value="Kadın">Kadın</option>
    </select>
    <input type="date" name="DogumTarihi" class="form-control" required />

    <h4>İletişim Bilgileri</h4>
    <input name="Telefon" class="form-control" placeholder="Telefon" required />
    <input name="Email" class="form-control" placeholder="E-posta" type="email" required />

    <h4>Adres Bilgileri</h4>
    <input name="Il" class="form-control" placeholder="İl" required />
    <input name="Ilce" class="form-control" placeholder="İlçe" />
    <input name="Sokak" class="form-control" placeholder="Sokak" />
    <input name="Cadde" class="form-control" placeholder="Cadde" />
    <input name="No" class="form-control" placeholder="No" />
    <input name="Daire" class="form-control" placeholder="Daire" />
    <textarea name="TamAdres" class="form-control" placeholder="Tam Adres"></textarea>

    <button type="submit" class="btn btn-primary mt-3">Kaydet</button>
</form>
