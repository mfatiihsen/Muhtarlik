@model VatandasEkleViewModel

@{
    ViewData["Title"] = "Vatandaş Ekle";
    Layout = "_AdminLayout";
}

<h2>Vatandaş Ekle</h2>

<!-- Genel model hataları -->
@Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

<form asp-action="VatandasEkle" method="post">
    <h4>Kimlik Bilgileri</h4>

    <div class="mb-2">
        <input asp-for="TcKimlikNo" class="form-control" placeholder="TC Kimlik No" />
        <span class="text-danger" asp-validation-for="TcKimlikNo"></span>
    </div>

    <div class="mb-2">
        <input asp-for="Sifre" type="password" class="form-control" placeholder="Şifre" />
        <span class="text-danger" asp-validation-for="Sifre"></span>
    </div>

    <div class="mb-2">
        <input asp-for="Ad" class="form-control" placeholder="Ad" />
        <span class="text-danger" asp-validation-for="Ad"></span>
    </div>

    <div class="mb-2">
        <input asp-for="Soyad" class="form-control" placeholder="Soyad" />
        <span class="text-danger" asp-validation-for="Soyad"></span>
    </div>

    <div class="mb-2">
        <select asp-for="Cinsiyet" class="form-select">
            <option value="">Cinsiyet Seçin</option>
            <option>Erkek</option>
            <option>Kadın</option>
        </select>
        <span class="text-danger" asp-validation-for="Cinsiyet"></span>
    </div>

    <div class="mb-2">
        <input asp-for="DogumTarihi" type="date" class="form-control" />
        <span class="text-danger" asp-validation-for="DogumTarihi"></span>
    </div>

    <h4>İletişim Bilgileri</h4>

    <div class="mb-2">
        <input asp-for="Telefon" class="form-control" placeholder="Telefon" />
        <span class="text-danger" asp-validation-for="Telefon"></span>
    </div>

    <div class="mb-2">
        <input asp-for="Email" class="form-control" placeholder="E-posta" type="email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>

    <h4>Adres Bilgileri</h4>

    <div class="mb-2">
        <input asp-for="Il" class="form-control" placeholder="İl" />
        <span class="text-danger" asp-validation-for="Il"></span>
    </div>

    <div class="mb-2">
        <input asp-for="Ilce" class="form-control" placeholder="İlçe" />
    </div>

    <div class="mb-2">
        <input asp-for="Sokak" class="form-control" placeholder="Sokak" />
    </div>

    <div class="mb-2">
        <input asp-for="Cadde" class="form-control" placeholder="Cadde" />
    </div>

    <div class="mb-2">
        <input asp-for="No" class="form-control" placeholder="No" />
    </div>

    <div class="mb-2">
        <input asp-for="Daire" class="form-control" placeholder="Daire" />
    </div>

    <div class="mb-2">
        <textarea asp-for="TamAdres" class="form-control" placeholder="Tam Adres"></textarea>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Kaydet</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
