@model List<muhtarlik.Models.Adres>

@{
    Layout = "_AdminLayout";
}

<!-- Sayfa Stilleri -->
<style>
    .container {
        margin-top: 30px;
    }

    .search-bar {
        margin-bottom: 20px;
        margin-top: 20px;
    }

    .table {
        margin-top: 20px;
    }

    .table th,
    .table td {
        text-align: center;
    }
</style>

<!-- Sayfa Başlığı -->
<div class="container">
    <h2>Adres Bilgileri</h2>

    <!-- Arama Barı -->
    <div class="search-bar">
        <input type="text" id="search" class="form-control" placeholder="Adres araması yapın..." onkeyup="aramaYap()">
    </div>

    <!-- Tablo -->
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>İL</th>
                <th>İLÇE</th>
                <th>SOKAK</th>
                <th>CADDE</th>
                <th>NO</th>
                <th>DAİRE</th>
                <th>TAM ADRES</th>
                <th>SİL</th>
            </tr>
        </thead>
        <tbody id="adreslerTbody">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Il</td>
                    <td>@item.Ilce</td>
                    <td>@item.Sokak</td>
                    <td>@item.Cadde</td>
                    <td>@item.No</td>
                    <td>@item.Daire</td>
                    <td>@item.TamAdres</td>
                    <td>
                        <form asp-action="AdresSil" asp-controller="Admin" method="post"
                            onsubmit="return confirm('Bu adresi silmek istediğinize emin misiniz?');">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-danger">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
