@model List<muhtarlik.Models.Adres>

@{
    Layout = "_AdminLayout";
}




<style>
    .container {
        margin-top: 30px;
    }

    .search-bar {
        margin-bottom: 20px;
        margin-top: 20px;
    }

    .table {
        margin-top: 20px;
    }

    .table th,
    .table td {
        text-align: center;
    }
</style>


<div class="container">
    <h2>Vatandaş Bilgileri</h2>

    <!-- Arama Barı -->
    <div class="search-bar">
        <input type="text" id="search" class="form-control" placeholder="TC Numarası ile arama yapın..."
            onkeyup="aramaYap()">
    </div>

    <!-- Tablo -->
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>İL</th>
                <th>İLÇE</th>
                <th>SOKAK</th>
                <th>CADDE</th>
                <th>NO</th>
                <th>DAİRE</th>
                <th>TAM ADRES</th>
                <th>DÜZENLE</th>
                <th>SİL</th>
            </tr>
        </thead>
        <tbody id="vatandaslarTbody">
            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.Il</td>
                    <td>@item.Ilce</td>
                    <td>@item.Sokak</td>
                    <td>@item.Cadde</td>
                    <td>@item.No</td>
                    <td>@item.Daire</td>
                    <td>@item.TamAdres</td>
                    <td>
                        <!-- Düzenleme Butonu -->
                        <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#editModal"
                            onclick="openEditModal(@item.Id)">
                            <i class="fa-solid fa-pen-to-square" style="cursor:pointer;color:white"></i>
                        </button>
                    </td>
                    <td>
                        <form asp-action="Delete" asp-controller="Vatandas" method="post"
                            onsubmit="return confirm('Bu kişiyi silmek istediğinize emin misiniz?');">
                            <input type="hidden" name="tcNo" value="@item.Id" />
                            <button type="submit" class="btn btn-danger">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

